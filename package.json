{
  "private": true,
  "name": "portfolio",
  "title": "Kai Hao",
  "homepage": "https://kevin940726.github.io/",
  "description": "Hi, I am Kai Hao, a front-end developer in Taiwan.",
  "twitter": "kevin940726",
  "repository": {
    "type": "git",
    "url": "git@github.com:kevin940726/kevin940726.github.io.git"
  },
  "scripts": {
    "lint:js": "xo --fix",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint": "npm-run-all --parallel lint:*",
    "start": "phenomic start",
    "build": "phenomic build",
    "pretest": "npm run lint",
    "test": "npm run lint && npm run build",
    "predeploy": "npm run test",
    "deploy": "./scripts/deploy.sh"
  },
  "phenomic": {
    "CNAME": false
  },
  "#babel": "webpack-(development|production) are useful for webpack 2, otherwise use development|production",
  "babel": {
    "env": {
      "test": {
        "presets": [
          "babel-preset-latest",
          "babel-preset-stage-0",
          "babel-preset-react"
        ]
      },
      "development": {
        "presets": [
          "babel-preset-latest",
          "babel-preset-stage-0",
          "babel-preset-react"
        ],
        "plugins": [
          "babel-plugin-transform-react-jsx-source",
          "babel-plugin-transform-react-jsx-self",
          "react-hot-loader/babel"
        ]
      },
      "production": {
        "presets": [
          "babel-preset-react-optimize",
          "babel-preset-latest",
          "babel-preset-stage-0",
          "babel-preset-react"
        ]
      },
      "webpack-development": {
        "presets": [
          [
            "babel-preset-latest",
            {
              "es2015": {
                "modules": false
              }
            }
          ],
          "babel-preset-stage-0",
          "babel-preset-react"
        ],
        "plugins": [
          "babel-plugin-transform-react-jsx-source",
          "babel-plugin-transform-react-jsx-self",
          "react-hot-loader/babel"
        ]
      },
      "webpack-production": {
        "presets": [
          "babel-preset-react-optimize",
          [
            "babel-preset-latest",
            {
              "es2015": {
                "modules": false
              }
            }
          ],
          "babel-preset-stage-0",
          "babel-preset-react"
        ]
      }
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "Firefox ESR"
  ],
  "xo": {
    "parser": "babel-eslint",
    "extends": "xo-react",
    "ignores": [
      "scripts/**",
      "webpack.config.js",
      "postcss.config.js"
    ],
    "env": [
      "browser",
      "node",
      "es6"
    ],
    "space": 2,
    "rules": {
      "unicorn/filename-case": 0,
      "import/no-unassigned-import": 0,
      "react/forbid-component-props": 0,
      "import/extensions": 0,
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "import/no-webpack-loader-syntax": 0,
      "import/no-unresolved": [
        2,
        {
          "ignore": [
            "\\.(jpe?g|png|gif)$"
          ]
        }
      ],
      "unicorn/no-abusive-eslint-disable": 0
    }
  },
  "stylelint": {
    "extends": [
      "./node_modules/phenomic/lib/stylelint-config-recommended/index.js",
      "stylelint-config-css-modules"
    ],
    "rules": {
      "declaration-block-no-ignored-properties": null
    }
  },
  "devDependencies": {
    "autotrack": "^2.0.1",
    "babel-cli": "^6.14.0",
    "babel-core": "^6.14.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-react-jsx-self": "^6.11.0",
    "babel-plugin-transform-react-jsx-source": "^6.9.0",
    "babel-preset-latest": "^6.14.0",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.22.0",
    "babel-preset-stage-1": "^6.13.0",
    "classnames": "^2.2.5",
    "css-loader": "^0.25.0",
    "date-fns": "^1.27.2",
    "emoji-name-map": "^1.2.2",
    "emoji-unicode": "^1.0.4",
    "eslint": "^3.7.1",
    "eslint-config-xo-react": "^0.10.0",
    "eslint-loader": "^1.5.0",
    "eslint-plugin-react": "^6.9.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "history": "^2.0.0",
    "image-webpack-loader": "^3.2.0",
    "jimp": "^0.2.27",
    "json-loader": "^0.5.2",
    "npm-run-all": "^1.7.0",
    "outdent": "^0.3.0",
    "phenomic": "^0.20.3",
    "postcss-browser-reporter": "^0.4.0",
    "postcss-cssnext": "^2.4.0",
    "postcss-loader": "^0.13.0",
    "postcss-reporter": "^1.3.0",
    "raw-loader": "^0.5.1",
    "react": "^15.0.0-rc.1",
    "react-dom": "^15.0.0-rc.1",
    "react-helmet": "^3.0.0",
    "react-hot-loader": "^3.0.0-beta",
    "react-redux": "^4.0.0",
    "react-router": "^2.3.0",
    "react-svg-inline": "^1.1.0",
    "react-topbar-progress-indicator": "^1.0.0",
    "redux": "^3.0.0",
    "responsive-loader": "^0.7.0",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.0",
    "stylelint": "7.7.1",
    "stylelint-config-css-modules": "^0.1.0",
    "stylelint-config-standard": "15.0.0",
    "warning": "^3.0.0",
    "webpack": "^1.11.0",
    "whatwg-fetch": "^0.11.0",
    "xo": "^0.17.1",
    "xo-loader": "^0.7.0"
  }
}
